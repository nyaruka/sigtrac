<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/airtel"
    android:id="@+id/main_bg"
    tools:context=".HomeActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/bitranks_logo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/bitranks_logo_1_bar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HSPDA"
            android:id="@+id/connection_type"
            android:textSize="15dp"
            android:gravity="center_horizontal"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:layout_alignRight="@+id/bitranks_logo"
            android:layout_alignLeft="@+id/bitranks_logo"
            android:layout_below="@+id/bitranks_logo" />



        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/carrier_logo"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/carrier_logo"
            android:layout_above="@+id/connection_type" />

        <com.nyaruka.sigtrac.ui.CurrentReportVew
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/current_report_container"
            android:layout_below="@id/connection_type">


            <TextView
                android:layout_toRightOf="@+id/current_report_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kbps"
                android:textStyle="bold"
                android:id="@+id/current_report_kbps_label"
                android:textSize="20dp"
                android:textColor="#50000000"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="-15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:id="@+id/current_report_speed"
                android:textSize="100dp"
                android:textColor="#fff"
                android:layout_centerHorizontal="true"
                />


            <ImageView

                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/current_report_ping_icon"
                android:layout_below="@id/current_report_speed"
                android:src="@drawable/sigtrac_ping_icon_new"
                android:layout_alignBottom="@+id/current_report_avg_time"
                android:layout_alignTop="@+id/current_report_avg_time"
                android:layout_marginRight="5dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="6546ms"
                android:id="@+id/current_report_avg_time"
                android:textSize="25dp"
                android:layout_below="@id/current_report_speed"
                android:textColor="#fff"
                android:layout_toRightOf="@+id/current_report_ping_icon"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:text="ping"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/current_report_ping_label"
                android:textColor="#50000000"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/current_report_avg_time"
                android:layout_below="@id/current_report_speed"
                android:layout_alignBottom="@id/current_report_avg_time"
                android:layout_alignTop="@id/current_report_avg_time"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/current_report_lost_label"
                android:gravity="center_vertical"
                android:text="100%"
                android:id="@+id/current_report_packets_lost"
                android:textSize="25dp"
                android:textColor="#fff"
                android:layout_below="@id/current_report_speed"
                android:layout_alignBottom="@id/current_report_avg_time"
                android:layout_alignTop="@id/current_report_avg_time"/>


            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:id="@+id/current_report_lost_label"
                android:textStyle="bold"
                android:text="lost"
                android:textSize="20dp"
                android:textColor="#50000000"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/current_report_speed"
                android:layout_alignBottom="@id/current_report_avg_time"
                android:layout_alignTop="@id/current_report_avg_time"
                android:layout_alignParentRight="true"/>



            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/current_report_start_button"
                android:clickable="true"
                android:onClick="onDemandStart"
                android:src="@android:drawable/ic_media_play"/>

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/current_report_progress"
                android:indeterminate="false" />


        </com.nyaruka.sigtrac.ui.CurrentReportVew>

        <com.nyaruka.sigtrac.ui.LastResultsView
            android:background="#50000000"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:layout_below="@id/current_report_container"
            android:id="@+id/last_results_container">

            <TextView
                android:id="@+id/last_results_title"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="#80ffffff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Last Test results" />


            <TextView
                android:layout_below="@id/last_results_title"
                android:layout_toRightOf="@+id/last_results_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kbps"
                android:textStyle="bold"
                android:id="@+id/last_results_kbps_label"
                android:textSize="15dp"
                android:textColor="#50000000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="-5dp"/>

            <TextView
                android:layout_below="@id/last_results_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:id="@+id/last_results_speed"
                android:textSize="30dp"
                android:textColor="#fff"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="5556ms"
                android:id="@+id/last_results_avg_time"
                android:textSize="15dp"
                android:layout_below="@id/last_results_speed"
                android:textColor="#fff"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:text="ping"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/ping_label"
                android:textColor="#50000000"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/last_results_avg_time"
                android:layout_below="@id/last_results_speed"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/last_results_lost_label"
                android:gravity="center_vertical"
                android:text="100%"
                android:id="@+id/last_results_packets_dropped"
                android:textSize="15dp"
                android:textColor="#fff"
                android:layout_below="@id/last_results_speed"
                />


            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:id="@+id/last_results_lost_label"
                android:textStyle="bold"
                android:text="lost"
                android:textSize="15dp"
                android:textColor="#50000000"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/last_results_speed"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/last_results_created"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:text="14/10/2013 18:54"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp" />


        </com.nyaruka.sigtrac.ui.LastResultsView>




    </RelativeLayout>


</ScrollView>
