<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/airtel"
    android:id="@+id/main_bg"
    tools:context=".HomeActivity">

    <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/bitranks_logo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/bitranks_logo_1_bar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HSPDA"
        android:id="@+id/connection_type"
        android:textSize="15dp"
        android:gravity="center_horizontal"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/bitranks_logo"
        android:layout_alignLeft="@+id/bitranks_logo"
        android:layout_below="@+id/bitranks_logo" />


    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/carrier_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/carrier_logo"
        android:layout_above="@+id/connection_type" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_marginTop="10dp"
        android:id="@+id/onDemandStart"
        android:clickable="true"
        android:onClick="onDemandStart"
        android:layout_below="@id/connection_type"
        android:layout_alignRight="@+id/carrier_logo"
        android:layout_alignLeft="@+id/bitranks_logo"
        android:src="@android:drawable/ic_media_play"/>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/onStartProgress"
        android:layout_below="@id/connection_type" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12345"
        android:textStyle="bold"
        android:id="@+id/speed"
        android:textSize="100dp"
        android:layout_below="@id/onDemandStart"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kbps"
        android:id="@+id/kbps_label"
        android:layout_alignRight="@+id/speed"
        android:layout_marginTop="-15dp"
        android:layout_marginRight="-10dp"
        android:layout_below="@+id/speed"
        android:textSize="20dp"
        android:textColor="#fff"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="6546 ms"
        android:id="@+id/avg_time"
        android:textSize="25dp"
        android:layout_below="@id/kbps_label"
        android:textColor="#fff"
        android:layout_alignBottom="@+id/ping_icon"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:text="100%"
        android:id="@+id/packets_lost"
        android:textSize="20dp"
        android:textColor="#fff"
        android:layout_below="@id/kbps_label"
        android:layout_alignBottom="@+id/ping_icon" />

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/ping_icon"
        android:layout_below="@id/kbps_label"
        android:layout_alignParentRight="true"
        android:src="@drawable/sigtrac_ping_icon_new"
        android:layout_alignRight="@+id/kbps_label" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/posted"
        android:id="@+id/posted"
        android:linksClickable="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:autoLink="web"
        android:textColor="#fff"/>


</RelativeLayout>
